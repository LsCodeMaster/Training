package threadpackage;

class Runner implements Runnable{

	@Override
	public void run() {
		// TODO Auto-generated method stub
		System.out.println("Hey There - Thread");
	}
	
}
public class MainThreader {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Every Java Application is at least single threaded
		//Thread mainThread = Thread.currentThread();
		Runner runner = new Runner();
		Thread firstThread = new Thread(runner, "First Thread");
		//System.out.println(mainThread);
		System.out.println(firstThread);
		firstThread.start();
		System.out.println(firstThread.getState());
		/*try {
			mainThread.sleep(5000);	
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}*/
		System.out.println("The End");
	}

}
